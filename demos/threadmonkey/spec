#include "block.h"

/*
 * ROM spec file
 */
beginseg
	name "code"
	flags BOOT OBJECT
	entry boot
	address CODE_BUFFER
	stack bootStack + STACKSIZE
	include "codesegment.o"
	include "$(ROOT)/usr/lib/PR/rspboot.o"
	include "$(ROOT)/usr/lib/PR/gspF3DEX2.xbus.o"
	include "$(ROOT)/usr/lib/PR/gspF3DEX2.fifo.o"
endseg

beginseg
	name "zbuffer"
	flags OBJECT
	address Z_BUFFER
	include "zbuffer.o"
endseg

beginseg
	name "cfb"
	flags OBJECT
	address COLOR_BUFFER
	include "cfb.o"
endseg

beginwave
	name "blocks"
	include "code"
	include "cfb"
	include "zbuffer"
endwave
